@page "/about"

@inject ClientCache Cache
@inject HttpClient Http

<RadzenFieldset Text="About">
    <RadzenPanel>
        <MarkdownView FileName="about.md" />
    </RadzenPanel>
    <RadzenPanel><RadzenButton Text="Refresh Data" Click="@Click" ></RadzenButton> </RadzenPanel>
</RadzenFieldset>

@code {

    protected override async Task OnInitializedAsync()
    {
    }

    private async void Click()
    {
        await Cache.Clear();
        await Http.PostAsync("Place/Clear",null);

    }

}
