@inherits ResizableCachedComponent

@if (infoList !=null)
{
    <RadzenDataList WrapItems="true" Data="@infoList" TItem="Info" >
        <Template Context="info">
            <InfoCard Info="info" />
        </Template>
    </RadzenDataList>
}

@code {

    [Parameter]
    public string CatId { get; set; }

    private IEnumerable<Info> infoList { get; set; }

    protected override async Task OnInitializedAsync()
    {
        if (CatId != null)
        {
            infoList = await Cache.GetInfosByCat(CatId);
        }
    }

}