
@inject ClientCache Cache
@inject NavigationManager NavigationManager

<RadzenPanel class="flex-column">
    <RadzenImage Path="images/White-Bird-Banner-lhb.png" Style="height:5rem" />
    <RadzenTextBox Placeholder="Search..." @bind-Value="@words" />
    <RadzenButton id="header-search-button" Text="Search" Click="Search" />
</RadzenPanel>


@code {

    string words;

    public async void Search(EventArgs e)
    {
        NavigationManager.NavigateTo($"/places/search/{words}");
        
    }
}
